@using HairSalon.Models;
@using System;
@{
  Layout = "_Layout";
}

<h1>All our Stylists</h1>

@if (Model.Count == 0)
{
  <h3>No stylists are available.</h3>
}
@foreach(var stylist in Model)
{
  <ul>
    <li><a href="/clients?stylistId=@stylist.GetId()">@stylist.GetName() - @stylist.GetDescription()</a></li>
  </ul>
}
<p><a href='stylists/new'>add a new stylist</a></p>
<p><a href='/'>Return to Main Page</a></p>
